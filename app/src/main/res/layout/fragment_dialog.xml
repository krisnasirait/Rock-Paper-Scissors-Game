<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.WinnerDialogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/round_corner">

        <TextView
            android:id="@+id/title_hasilpermainan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Permainan"
            android:fontFamily="@font/qarmic_sans"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ervin"
            android:fontFamily="@font/qarmic_sans"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/text_menang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENANG!"
            android:fontFamily="@font/qarmic_sans"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnmainLagi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Main Lagi"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/purple"/>

        <Button
            android:id="@+id/btn_kembalikemenu"
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Kembali Ke Menu"
            android:textAllCaps="false"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/light_orange"/>

    </LinearLayout>

</LinearLayout>