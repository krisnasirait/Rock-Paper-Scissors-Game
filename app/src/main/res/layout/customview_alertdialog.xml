<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title_hasilpermainan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Permainan"
            android:fontFamily="@font/qarmic_sans"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ervin"
            android:fontFamily="@font/qarmic_sans"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENANG!"
            android:fontFamily="@font/qarmic_sans"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnmainLagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Lagi"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:backgroundTint="@color/purple" />

        <Button
            android:id="@+id/btn_kembalikemenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali Ke Menu"
            android:textAllCaps="false"
            android:backgroundTint="@color/light_orange"/>

    </LinearLayout>

</LinearLayout>